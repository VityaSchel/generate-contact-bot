{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "es2022"
    ],
    "moduleResolution": "node",
    "outDir": "out",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": [
    "index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "out"
  ]
}